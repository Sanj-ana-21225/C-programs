#include <stdio.h>
int main()
{
    int n, i, key, found = 0;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    int arr[n];
    int *ptr = arr;
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++)
        scanf("%d", ptr + i);
    printf("Enter element to search: ");
    scanf("%d", &key);
    for(i = 0; i < n; i++) {
        if(*(ptr + i) == key) {
            printf("Element %d found at position %d\n", key, i + 1);
            found = 1;
            break;
        }
    }
  if(!found)
        printf("Element %d not found in the array.\n", key);
  return 0;
}
