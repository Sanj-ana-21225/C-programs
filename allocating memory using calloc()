#include <stdio.h>
#include <stdlib.h>
int main()
{
    int n, i;
    int *ptr;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    ptr = (int *)calloc(n, sizeof(int));

    if (ptr == NULL) {
        printf("Memory allocation failed\n");
        return 1;
    }
    printf("Values stored initially (:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", *(ptr + i)); 
    }
    printf("\nEnter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", ptr + i);
    }

    printf("Final elements are:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", *(ptr + i));
    }
    free(ptr);
   return 0;
}
