#include <stdio.h>
int main()
{
    int n, i;
    int arr[n];          
    int *ptr = arr;  
    printf("Enter the number of elements in the array: ");
    scanf("%d", &n);
    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", ptr + i);
    }
    printf("Array elements are: ");
    for (i = 0; i < n; i++) {
        printf("%d ", *(ptr + i)); 
      }
   return 0;
}
