#include <stdio.h>
 int main()
{
    char str[100];
    int i, length=0;
    printf("Enter a string: ");
    gets(str);
    printf("the length of a string is\n",length);
    {
      for(i=0;str[i]!=0;i++)
       length++;
     }
    printf("your Reversed string is: ");
    for (i = length - 1; i >= 0; i--) {
        printf("%c", str[i]);
    }
    return 0;
}
