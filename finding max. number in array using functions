#include <stdio.h>
int max(int a[], int n);   
int main() 
{
    int arr[100], n, i;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
   int maximum = max(arr, n);

    printf("Maximum number = %d\n", maximum);

    return 0;
}
int max(int a[], int n) 
{
    int i, max = a[0];

    for (i = 1; i < n; i++) {
        if (a[i] > max) {
            max = a[i];
        }
    }
    return max;
}
